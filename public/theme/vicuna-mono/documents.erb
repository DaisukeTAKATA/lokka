<% unless index? %>
<h2><%= @title %></h2>
<% end %>
<div class="section articles">
<% @posts.each do |post| %>
  <div class="section article">
    <div class="header">
      <h3><a href="<%= post.link %>"><%= post.title %></a></h3>
      <ul class="info">
        <li class="date"><%= post.created_at %></li>
        <li class="category"><a href="<%= post.category.link %>"><%= post.category.name %></a></li>
        <li class="auther"><%= post.user.name %></li>
      </ul>
    </div>
    <div class="body">
      <%= post.body %>
    </div>
    <div class="footer">
    </div>
  </div>
<% end %>
  <div class="pager">
    <ul>
      <% if @posts.pager.previous_page %>
      <li class="previous"><a href="?page=<%= @posts.pager.previous_page %>">Newer</a></li>
      <% end %>
      <% if @posts.pager.next_page %>
      <li class="next"><a href="?page=<%= @posts.pager.next_page %>">Older</a></li>
      <% end %>
    </ul>
  </div>
</div>
